background   Black              # Background color.
decorations  none               # Window decorations.
geometry     6x1-0+0            # Tray's geometry in standard X notation.
grow_gravity NE                 # Tray will grow in the opposite direction.
icon_gravity NE                 # Icon placement gravity.
icon_size    12                 # Dimensions of typical icon slot.
kludges      force_icons_size   # Force icon to respect icon_size.
no_shrink    false              # Enable shrink-back mode.
scrollbars   none               # Disable scrollbars.
skip_taskbar true               # Hide tray`s window from the taskbar.
sticky       true               # Make a tray`s window sticky across desktops.
vertical     false              # Use horizontal layout.
window_layer normal             # Set the EWMH-compatible window layer.
window_type  dock               # Set the EWMH-compatible window type.
window_strut none               # Disable window struts for tray window.

